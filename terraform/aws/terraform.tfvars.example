# AWS Configuration
aws_region   = "us-east-1"
project_name = "ai-digest"
environment  = "production"

# Gmail OAuth Configuration
gmail_client_id     = "your-gmail-client-id"
gmail_client_secret = "your-gmail-client-secret"
gmail_refresh_token = "your-gmail-refresh-token"

# OpenAI Configuration
openai_api_key   = "your-openai-api-key"
helicone_api_key = "your-helicone-api-key"

# Email Configuration
resend_api_key  = "your-resend-api-key"
recipient_email = "your-email@example.com"

# Processing Configuration (optional - defaults are fine)
# older_than_days     = 30
# max_links_per_email = 2
# max_sections        = 25
# keywords            = ""
# professions         = "Software Engineer,Product Manager,Designer"

# CORS Configuration for Lambda Function URLs
# For production with Vercel deployment:
allowed_origins = [
  "http://localhost:3000",
  "https://ai-digest-vert.vercel.app"
]

# For development (allows all origins):
# allowed_origins = ["*"]
# Note: Lambda Function URLs don't support wildcard subdomains like https://*.vercel.app
# You must list each domain explicitly or use "*" for all origins